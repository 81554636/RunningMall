<!DOCTYPE html>
#set( $ContextPath = ${request.contextPath} )
<html>
  	<head>
	    <title></title>
	    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	    <!-- Bootstrap -->
	    <link href="${ContextPath}/css/bootstrap.min.css" rel="stylesheet" media="screen">
	    
	    <script type="text/javascript" src="${ContextPath}/dwr/engine.js"></script>
		<script type="text/javascript" src="${ContextPath}/dwr/util.js"></script>
		<script type="text/javascript" src="${ContextPath}/dwr/interface/MessagePush.js"></script>
  	</head>
  	
	<body onload="dwr.engine.setActiveReverseAjax(true);dwr.engine.setNotifyServerOnPageUnload(true);">
	<div class="container-fluid">
	<div class="row-fluid">
		<div class="span2"></div>
		<div class="span8">
			<div class="row-fluid">
				<div class="span12"></div>
			</div>
			
			<div class="navbar navbar-inverse">
				<div class="navbar-inner">
					<div class="container-fluid">
						<a data-toggle="collapse" data-target=".navbar-responsive-collapse" class="btn btn-navbar"></a>
						<a href="#" class="brand">跑跑巴士管理平台</a>
						<div class="nav-collapse collapse navbar-responsive-collapse">
							<ul class="nav">
								<li #if(${CURRENT}=="PENDING")class='active'#end>
									<a href="${ContextPath}/Order/pendingFirst.do">待分配订单</a>
								</li>
								<li #if(${CURRENT}=="PROCESSING")class='active'#end>
									<a href="${ContextPath}/Order/processingFirst.do">已分配订单</a>
								</li>
								<li #if(${CURRENT}=="SEARCH")class='active'#end>
									<a href="${ContextPath}/Order/search.do">查询订单</a>
								</li>
								<li #if(${CURRENT}=="SHIPMENT")class='active'#end>
									<a href="${ContextPath}/Shipment/first.do">派送单查询</a>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
			
			$screen_content
		</div>
		<div class="span2"></div>
	</div>
	</body>
</html>