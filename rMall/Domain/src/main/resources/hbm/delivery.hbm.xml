<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Hibernate-mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ecommerce.rmall.domain.Delivery" table="rmall_delivery"> 
        <id name="id" type="java.lang.Integer">
            <column name="id"/>
            <generator class="identity"/>
        </id>
        <property name="name" type="java.lang.String" column="name" length="64"/>
        <property name="city" type="java.lang.String" column="city" length="32"/>
        <property name="phone" type="java.lang.String" column="phone" length="20"/>        
        <property name="address" type="java.lang.String" column="address" length="256"/>
        <property name="deliverDate" type="java.sql.Timestamp" column="deliverDate"/>
    </class>
</hibernate-mapping>